
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-area">
    <div class="container">
        <div class="login-box ptb--100">
           @using (Html.BeginForm("ResetPassword", "Account", new { action = "ResetPassword", controller = "Account" }, FormMethod.Post))
           {
                <div class="login-form-head">
                    <h4>Forgot Password</h4>
                    <p>Hey! Forgot Password Your Password ? Reset Now</p>
                </div>
                <div class="login-form-body">

                    <div class="form-gp">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" id="exampleInputEmail1" name="Email">
                        <i class="ti-lock"></i>
                    </div>
                    <div class="form-gp">
                        <p class="text-danger">
                            @ViewBag.InValidEmaile
                        </p>
                    </div>
                    <div class="submit-btn-area mt-5">
                        <button id="form_submit" type="submit">Reset <i class="ti-arrow-right"></i></button>
                    </div>
                </div>
           }
        </div>
    </div>
</div>

