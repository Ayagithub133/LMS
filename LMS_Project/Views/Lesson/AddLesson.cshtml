

<body>
    <div class="main-content-inner">
        <div class="row">
            <div class="col-lg-6 col-ml-12">
                <div class="row">

                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">New Lesson</h4>

                                @using (Html.BeginForm("AddLesson", "Lesson", new { action = "AddLesson", controller = "Lesson" },FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <div class="input-group mb-3">
                                        <label class="col-form-label col-md-2 ">UPLOAD Image</label>

                                        <input type="file" id="image" class="form-control"  aria-describedby="basic-addon1" name="upload">
                                    </div>
                                    <div class="input-group mb-3">
                                        <label class="col-form-label col-md-2 "> TITLE</label>

                                        <input type="text" id="title" name="LessonTitle" class="form-control" placeholder="Lesson Title" aria-describedby="basic-addon1">
                                    </div>
                                    <div class="input-group mb-3">
                                        <label class="col-form-label col-md-2 "> COURSE</label>
                                        <select class=" form-control" name="Id">
                                            <option disabled selected>--Select--</option>
                                            @foreach (var item in (List<SelectListItem>)ViewBag.CoursesList)
                                            {
                                            <option value="@item.Value" >@item.Text</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="input-group mb-3">
                                        <label class="col-form-label col-md-2 ">UPLOAD VIDEO</label>

                                        <input type="file" id="video"  class="form-control"   aria-describedby="basic-addon1" name="upload">
                                    </div>
                                    <div class="input-group mb-3">
                                        <label class="col-form-label col-md-2 ">UPLOAD LESSON FILE</label>

                                        <input type="file" id="files"  class="form-control"  aria-label="lesson Files " aria-describedby="basic-addon1" name="upload">
                                    </div>

                                    <div class="input-group mb-3">

                                        <div class="col-md-6"></div>
                                        <input type="submit" class="btn btn-flat btn-primary btn-lg mb-3 col-md-6" value="Add Lesson" style="width:300px" />

                                    </div>

                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
